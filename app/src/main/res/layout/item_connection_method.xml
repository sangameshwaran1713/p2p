<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_method"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#CCCCCC"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Method Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_method_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wi-Fi Direct"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_method_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Available"
                android:textSize="12sp"
                android:background="@drawable/rounded_background"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Method Description -->
        <TextView
            android:id="@+id/tv_method_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direct device-to-device connection (fastest)"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:alpha="0.8" />

        <!-- Method Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_method_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speed: ★★★★★ (10-50 MB/s)"
                android:textSize="12sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tv_method_compatibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compatibility: ★★★☆☆"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>